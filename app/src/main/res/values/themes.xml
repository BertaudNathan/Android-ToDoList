        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ToDoListDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
